par(mfrow=c(1,2))
attach(mtcars)
plot(wt, mpg, main="Regression\nlm(y~x)", xlab="X", ylab="Y", pch=19)
abline(lm(mpg ~ wt), col="red", lwd=2)
library(scatterplot3d)
attach(mtcars)
s3d <- scatterplot3d(wt, disp, mpg, main="Regression\nlm(y~x1+x2)", xlab="X1", ylab="X2", zlab="Y", pch=19)
fit <- lm(mpg ~ wt + disp)
s3d$plane3d(fit)
